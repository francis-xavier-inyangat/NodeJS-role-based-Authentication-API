extend loginlayout 
block content 
    body.dash 
        .container-login 
            if alert == "error"
                
            .container 
                h1 LEMON SPLASH 
                form(action='/userregister' method='POST')
                    h4.sign-in Register!
                    .form-floating
                        small#error1
                        input#exampleInputEmail1.form-control(type='text' name='username' aria-describedby='emailHelp' placeholder='username')
                    br
                    .form-floating
                        small#error1
                        input#exampleInputEmail1.form-control(type='email' name='email' aria-describedby='emailHelp' placeholder='Email Address')
                    br
                    .form-floating
                        small#error2
                        input#exampleInputPassword1.form-control(type='password' name='password' placeholder='Password')
                    br
                    button.btn.btn-primary(type='submit') Submit
                
                   




